<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
  <targets>
<target xsi:type="File" name="ServiceMessageToFile" fileName="${basedir}\logs\${level}.log" layout="${longdate} ${uppercase:${level}}: ${message}"/>
<target xsi:type="File" name="ErrorsToFile" fileName="${basedir}\logs\${level}.log" layout="${longdate} ${uppercase:${level}}: ${message} Stack Trace: ${stacktrace}"/>
<target xsi:type="File" name="TraceToFile" fileName="${basedir}\logs\${level}.log" layout="${longdate}: ${message} ${stacktrace}"/>
  </targets>
  <rules>
    <logger name="ClientLogger" writeTo="ServiceMessageToFile" minlevel="Debug" maxlevel="Warn"></logger>
    <logger name="ClientLogger" writeTo="ErrorsToFile" minlevel="Error" maxlevel="Fatal"></logger>
    <logger name="ClientLogger" writeTo="TraceToFile" level="Trace"></logger>
  </rules>
</nlog>
