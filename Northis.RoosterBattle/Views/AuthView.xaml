<Window
    x:Class="Northis.RoosterBattle.Views.AuthView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Northis.RoosterBattle.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Авторизация"
    Width="300"
    Height="200"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Grid.Column="1" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Text="Логин" />
        <TextBox Grid.Row="1" Grid.Column="1" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Text="Пароль" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Content="Авторизация" />
        <Button
            Grid.Row="2"
            Grid.Column="0"
            Content="Очистить" />
    </Grid>
</Window>
